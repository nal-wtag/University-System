
<div class="container">

  <%= form_for @department, url: {action: :update} do |f| %>

    <h3>Add a Department</h3>
    <%= "<div>#{@department.errors.full_messages.first}</div>".html_safe if @department.errors.any? %>
    <p>

    <div>
      <label>Department Name</label>
      <%= f.text_field :name %>
    </div>

    <div>
      <label>Department Location</label>
      <%= f.text_field :location %>
    </div>



    </p>
    <div>
      <%= link_to 'Back', { controller: 'departments', action: 'index'} %>
      <%= f.submit 'Update Department' %>
    </div>
  <% end %>
  </div>