
<div class="container">




  <%= form_for @department, url: {action: :create} do |f| %>
    <div>
      <h3>Add a Department</h3>
    </div>
    <div>
      <p>

      <div>
        <label>Department Name</label>
        <%= f.text_field :name %>
      </div>

      <div>
        <label>Department Location</label>
        <%= f.text_field :location %>
      </div>


      </p>
    </div>
    <div>
      <%= link_to 'Back', { controller: 'departments', action: 'index'} %>
      <%= f.submit 'Create Department' %>

    </div>





  <% end %>
</div>
<p>
  <% @department.errors.full_messages.each do |message| %>
  <div><%= message %></div>
<% end %>
</p>

